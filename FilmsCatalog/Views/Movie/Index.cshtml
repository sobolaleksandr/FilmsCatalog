@model IndexViewModel
@addTagHelper *, FilmsCatalog
@{
    ViewData["Title"] = "Каталог фильмов";
}
<h1>Список фильмов</h1>
<a asp-action="CreateOrEdit">Добавить фильм</a>
<table class="table">
    <tr>
        <th>Название</th><th>Описание</th><th>Год выпуска</th><th>Режисер</th>
    </tr>
    @foreach (var m in Model.Movies)
    {
        <tr>
            <td>@m.Title</td>
            <td>@m.Description</td>
            <td>@m.Year</td>
            <td>@m.Producer</td>
            <td>
                <a asp-action="Details" asp-controller="Movie" asp-route-id="@m.Id">Подробнее</a> |
                <a asp-action="CreateOrEdit" asp-controller="Movie" asp-route-id="@m.Id">Изменить</a>
            </td>
        </tr>
    }
</table>
<page-link page-model="Model.PageViewModel" page-action="Index"></page-link>